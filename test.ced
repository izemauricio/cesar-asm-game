ROTINA_TIMER:
inc TICK                      ; para contar 1000 ms
inc TICK_DRAW                 ; para contar 200 ms
cmp TICK, #10
beq TACK                      ; jmp if completou 1 segundo
jmp RETORNA_TIMER

TACK:
inc TIMER                     ; incrementa 1 segundo
clr TICK                      ; reseta contador 
jmp RETORNA_TIMER

