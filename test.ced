TIPO_DO_ASTEROIDE:
cmp r4,#0                     ; r4 = tipo do asteroide    
beq TIPO_1                    ; jmp if tipo == 0
cmp r4,#1
beq TIPO_2                    ; jmp if tipo == 1
cmp r4,#2
beq TIPO_3                    ; jmp if tipo == 2
cmp r4,#3
beq TIPO_4                    ; jmp if tipo == 3
RETORNA_TIPO:
rts r7
TIPO_1:
mov #49,r4
jmp RETORNA_TIPO
TIPO_2:
mov #50,r4
jmp RETORNA_TIPO
TIPO_3:
mov #51,r4
