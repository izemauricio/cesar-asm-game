ROTINA_TECLADO:
mov TECDT, r0                 ; r0 = buffer do teclado
cmp r0, #'i'
beq MAKE_GRANDE               ; jmp if tecla == i
cmp r0, #'p'
beq MAKE_GRANDE 
cmp r0, #'a'
beq MAKE_GRANDE
cmp r0, #'d'
beq MAKE_GRANDE
cmp r0, #'I'
beq SALVAR_TECLA
cmp r0, #'P'
beq SALVAR_TECLA
cmp r0, #'A'
beq SALVAR_TECLA
cmp r0, #'D'
beq SALVAR_TECLA
cmp r0, #13
beq SALVAR_TECLA              ; jmp if tecla == ENTER
cmp r0, #' '
beq SALVAR_TECLA              ; jmp if tecla == ' '
jmp TECLA_ERROR               ; tecla invalida

MAKE_GRANDE:
sub #32,r0                    ; x + 32 = X
jmp SALVAR_TECLA

SALVAR_TECLA:
mov r0, TECLA                 ; TECLA = BUFFER DO TECLADO
jmp RETORNA_TECLADO

TECLA_ERROR:
mov #-1, TECLA                ; TECLA = -1
jmp RETORNA_TECLADO

